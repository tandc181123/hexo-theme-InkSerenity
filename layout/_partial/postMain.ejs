<main class="container my-4">
    <div class="col-lg-12">
        <article class="card">
            <div class="card-body">
                <header>
                    <h2 class="card-title">
                        <%= page.title %>
                    </h2>
                    <%- partial('_partial/categoryLink', { post: page}) %>
                        <hr>
                </header>
                <div class="card-text">
                    <%- page.content %>
                </div>
                <hr>

                <div class="d-flex">
                    <p class="text-muted ms-auto">
                        Last updated: <%= page.updated.format('YYYY-MM-DD HH:mm:ss') %>
                    </p>
                </div>
            </div>
        </article>
    </div>
</main>